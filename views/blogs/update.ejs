<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body class="create-body">
    <%- include("../partials/navbar") %>

    <div class="container-{breakpoint}">
      <div class="section-center clearfix">
      <div class="text-center">
        <h1 class="heading">Update Blog Here</h1>
      </div>

      <form
        action="/blogs/<%= foundBlog._id %>?_method=patch"
        method="post"
      >
        <div class="text-center mb-3">
          <input
            type="text"
            placeholder="title"
            name="title"
            value="<%= foundBlog.title %> "
          />
        </div>

        <div class="text-center mb-3">
          <textarea name="text" cols="30" rows="3" placeholder="description">
<%= foundBlog.text %> </textarea
          >
        </div>

        <div class="text-center mb-3">
          <textarea name="author" cols="30" rows="3" placeholder="author">
<%= foundBlog.author %> </textarea
          >
        </div>


        <div class="text-center mb-3">
          <input
            type="img"
            placeholder="Image URL"
            name="img"
            value="<%= foundBlog.img %> "
          />
        </div>

        <div class="text-center mb-3">
          <input 
          type="date" 
          placeholder="Created Date" 
          name="createdDate" 
          value=" <%= foundBlog.createdDate  %> " />
        </div>

        <div class="text-center mb-3">
          <input
            type="text"
            placeholder="Category"
            name="category"
            value="<%= foundBlog.category %> "
          />
        </div>

        <div class="d-grid col-6 mx-auto">
        <button class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
    <%- include("../partials/footer")  %>
  </div>

  </body>
</html>
